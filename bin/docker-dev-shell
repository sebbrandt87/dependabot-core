#!/bin/bash

set -e

CORE_PATH=$(cd "$(dirname "$(dirname "$0")")" && pwd)
IMAGE_NAME="${IMAGE_NAME:=dependabot/dependabot-core-development}"
CONTAINER_NAME="${CONTAINER_NAME:=dependabot-core-development}"
DOCKERFILE="${DOCKERFILE:=Dockerfile.development}"
HELP=false
REBUILD=false

# Enable docker buildkit with inline cache builds
export DOCKER_BUILDKIT=1

# shellcheck disable=SC2034
OPTS=$(getopt -o hr --long help,rebuild -n 'parse-options' -- "$@")
# shellcheck disable=SC2181
if [ $? != 0 ]; then
  echo "failed parsing options" >&2
  exit 1
fi

while true; do
  case "$1" in
    -h | --help ) HELP=true; shift ;;
    -r | --rebuild ) REBUILD=true; shift ;;
    -- ) shift; break ;;
    * ) break ;;
  esac
done

if [ "$HELP" = "true" ]; then
  echo "usage: $0 [--rebuild] [ARGS]"
  exit 0
fi

build_image() {
  export BUILT_IMAGE=true
  echo "$(tput setaf 2)=> building image from Dockerfile$(tput sgr0)"
  docker build \
    --build-arg BUILDKIT_INLINE_CACHE=1 \
    --build-arg "USER_UID=$(id -u)" \
    --build-arg "USER_GID=$(id -g)" \
    --cache-from "dependabot/dependabot-core:latest" \
    -t dependabot/dependabot-core .
  echo "$(tput setaf 2)=> building image from $DOCKERFILE$(tput sgr0)"
  docker build --build-arg BUILDKIT_INLINE_CACHE=1 -t "$IMAGE_NAME" -f "$DOCKERFILE" .
}

IMAGE_ID=$(docker inspect --type=image -f '{{.Id}}' "$IMAGE_NAME" 2> /dev/null || true)
if [ -z "$IMAGE_ID" ]; then
  echo "$(tput setaf 4) > image $IMAGE_NAME doesn't exist$(tput sgr0)"
  build_image
elif [ "$REBUILD" = "true" ]; then
  echo "$(tput setaf 4) > rebuild of $IMAGE_NAME requested$(tput sgr0)"
  build_image
else
  echo "$(tput setaf 4) > image $IMAGE_NAME already exists$(tput sgr0)"
fi

set +e
RUNNING=$(docker ps --format '{{.Names}}' | grep "$CONTAINER_NAME")
set -e
echo "$RUNNING"
if [ -n "$RUNNING" ]; then
  if [ -z "$BUILT_IMAGE" ]; then
    # image was not rebuilt - can we reuse existing?
    exec docker exec -ti "$CONTAINER_NAME" bash
  else
    # image was rebuilt - exit running container
    docker stop "$CONTAINER_NAME"
  fi
fi

DOCKER_OPTS=()
if [ -n "$HTTP_PROXY" ]; then
  DOCKER_OPTS+=(-e "http_proxy=$HTTP_PROXY")
  DOCKER_OPTS+=(-e "HTTP_PROXY=$HTTP_PROXY")
fi
if [ -n "$HTTPS_PROXY" ]; then
  DOCKER_OPTS+=(-e "https_proxy=$HTTPS_PROXY")
  DOCKER_OPTS+=(-e "HTTPS_PROXY=$HTTPS_PROXY")
fi

if [ -n "$DOCKER_NETWORK" ]; then
  DOCKER_OPTS+=(--network "$DOCKER_NETWORK")
fi

CONTAINER_ARGS=("bash")
if [ "$#" -gt "0" ]; then
  CONTAINER_ARGS=("$@")
fi

echo "$(tput setaf 2)=> running docker development shell$(tput sgr0)"
CODE_DIR="/home/dependabot/dependabot-core"
touch .core-bash_history
docker run --rm -ti \
  -v "$CORE_PATH/.core-bash_history:/home/dependabot/.bash_history" \
  -v "$CORE_PATH/.rubocop.yml:$CODE_DIR/.rubocop.yml" \
  -v "$CORE_PATH/bin:$CODE_DIR/bin" \
  -v "$CORE_PATH/common/.rubocop.yml:$CODE_DIR/common/.rubocop.yml" \
  -v "$CORE_PATH/common/Gemfile:$CODE_DIR/common/Gemfile" \
  -v "$CORE_PATH/common/dependabot-common.gemspec:$CODE_DIR/common/dependabot-common.gemspec" \
  -v "$CORE_PATH/common/bin:$CODE_DIR/common/bin" \
  -v "$CORE_PATH/common/lib:$CODE_DIR/common/lib" \
  -v "$CORE_PATH/common/spec:$CODE_DIR/common/spec" \
  -v "$CORE_PATH/common/script:$CODE_DIR/common/script" \
  -v "$CORE_PATH/terraform/.rubocop.yml:$CODE_DIR/terraform/.rubocop.yml" \
  -v "$CORE_PATH/terraform/Gemfile:$CODE_DIR/terraform/Gemfile" \
  -v "$CORE_PATH/terraform/dependabot-terraform.gemspec:$CODE_DIR/terraform/dependabot-terraform.gemspec" \
  -v "$CORE_PATH/terraform/lib:$CODE_DIR/terraform/lib" \
  -v "$CORE_PATH/terraform/spec:$CODE_DIR/terraform/spec" \
  -v "$CORE_PATH/terraform/script:$CODE_DIR/terraform/script" \
  -v "$CORE_PATH/elm/.rubocop.yml:$CODE_DIR/elm/.rubocop.yml" \
  -v "$CORE_PATH/elm/Gemfile:$CODE_DIR/elm/Gemfile" \
  -v "$CORE_PATH/elm/dependabot-elm.gemspec:$CODE_DIR/elm/dependabot-elm.gemspec" \
  -v "$CORE_PATH/elm/lib:$CODE_DIR/elm/lib" \
  -v "$CORE_PATH/elm/spec:$CODE_DIR/elm/spec" \
  -v "$CORE_PATH/elm/script:$CODE_DIR/elm/script" \
  -v "$CORE_PATH/docker/.rubocop.yml:$CODE_DIR/docker/.rubocop.yml" \
  -v "$CORE_PATH/docker/Gemfile:$CODE_DIR/docker/Gemfile" \
  -v "$CORE_PATH/docker/dependabot-docker.gemspec:$CODE_DIR/docker/dependabot-docker.gemspec" \
  -v "$CORE_PATH/docker/lib:$CODE_DIR/docker/lib" \
  -v "$CORE_PATH/docker/spec:$CODE_DIR/docker/spec" \
  -v "$CORE_PATH/docker/script:$CODE_DIR/docker/script" \
  -v "$CORE_PATH/git_submodules/.rubocop.yml:$CODE_DIR/git_submodules/.rubocop.yml" \
  -v "$CORE_PATH/git_submodules/Gemfile:$CODE_DIR/git_submodules/Gemfile" \
  -v "$CORE_PATH/git_submodules/dependabot-git_submodules.gemspec:$CODE_DIR/git_submodules/dependabot-git_submodules.gemspec" \
  -v "$CORE_PATH/git_submodules/lib:$CODE_DIR/git_submodules/lib" \
  -v "$CORE_PATH/git_submodules/spec:$CODE_DIR/git_submodules/spec" \
  -v "$CORE_PATH/git_submodules/script:$CODE_DIR/git_submodules/script" \
  -v "$CORE_PATH/github_actions/.rubocop.yml:$CODE_DIR/github_actions/.rubocop.yml" \
  -v "$CORE_PATH/github_actions/Gemfile:$CODE_DIR/github_actions/Gemfile" \
  -v "$CORE_PATH/github_actions/dependabot-github_actions.gemspec:$CODE_DIR/github_actions/dependabot-github_actions.gemspec" \
  -v "$CORE_PATH/github_actions/lib:$CODE_DIR/github_actions/lib" \
  -v "$CORE_PATH/github_actions/spec:$CODE_DIR/github_actions/spec" \
  -v "$CORE_PATH/github_actions/script:$CODE_DIR/github_actions/script" \
  -v "$CORE_PATH/python/.rubocop.yml:$CODE_DIR/python/.rubocop.yml" \
  -v "$CORE_PATH/python/Gemfile:$CODE_DIR/python/Gemfile" \
  -v "$CORE_PATH/python/dependabot-python.gemspec:$CODE_DIR/python/dependabot-python.gemspec" \
  -v "$CORE_PATH/python/helpers:/opt/python" \
  -v "$CORE_PATH/python/helpers:/opt/python/helpers" \
  -v "$CORE_PATH/python/lib:$CODE_DIR/python/lib" \
  -v "$CORE_PATH/python/spec:$CODE_DIR/python/spec" \
  -v "$CORE_PATH/python/script:$CODE_DIR/python/script" \
  -v "$CORE_PATH/nuget/.rubocop.yml:$CODE_DIR/nuget/.rubocop.yml" \
  -v "$CORE_PATH/nuget/Gemfile:$CODE_DIR/nuget/Gemfile" \
  -v "$CORE_PATH/nuget/dependabot-nuget.gemspec:$CODE_DIR/nuget/dependabot-nuget.gemspec" \
  -v "$CORE_PATH/nuget/lib:$CODE_DIR/nuget/lib" \
  -v "$CORE_PATH/nuget/spec:$CODE_DIR/nuget/spec" \
  -v "$CORE_PATH/nuget/script:$CODE_DIR/nuget/script" \
  -v "$CORE_PATH/maven/.rubocop.yml:$CODE_DIR/maven/.rubocop.yml" \
  -v "$CORE_PATH/maven/Gemfile:$CODE_DIR/maven/Gemfile" \
  -v "$CORE_PATH/maven/dependabot-maven.gemspec:$CODE_DIR/maven/dependabot-maven.gemspec" \
  -v "$CORE_PATH/maven/lib:$CODE_DIR/maven/lib" \
  -v "$CORE_PATH/maven/spec:$CODE_DIR/maven/spec" \
  -v "$CORE_PATH/maven/script:$CODE_DIR/maven/script" \
  -v "$CORE_PATH/gradle/.rubocop.yml:$CODE_DIR/gradle/.rubocop.yml" \
  -v "$CORE_PATH/gradle/Gemfile:$CODE_DIR/gradle/Gemfile" \
  -v "$CORE_PATH/gradle/dependabot-gradle.gemspec:$CODE_DIR/gradle/dependabot-gradle.gemspec" \
  -v "$CORE_PATH/gradle/lib:$CODE_DIR/gradle/lib" \
  -v "$CORE_PATH/gradle/spec:$CODE_DIR/gradle/spec" \
  -v "$CORE_PATH/gradle/script:$CODE_DIR/gradle/script" \
  -v "$CORE_PATH/hex/.rubocop.yml:$CODE_DIR/hex/.rubocop.yml" \
  -v "$CORE_PATH/hex/Gemfile:$CODE_DIR/hex/Gemfile" \
  -v "$CORE_PATH/hex/dependabot-hex.gemspec:$CODE_DIR/hex/dependabot-hex.gemspec" \
  -v "$CORE_PATH/hex/lib:$CODE_DIR/hex/lib" \
  -v "$CORE_PATH/hex/spec:$CODE_DIR/hex/spec" \
  -v "$CORE_PATH/hex/script:$CODE_DIR/hex/script" \
  -v "$CORE_PATH/cargo/.rubocop.yml:$CODE_DIR/cargo/.rubocop.yml" \
  -v "$CORE_PATH/cargo/Gemfile:$CODE_DIR/cargo/Gemfile" \
  -v "$CORE_PATH/cargo/dependabot-cargo.gemspec:$CODE_DIR/cargo/dependabot-cargo.gemspec" \
  -v "$CORE_PATH/cargo/lib:$CODE_DIR/cargo/lib" \
  -v "$CORE_PATH/cargo/spec:$CODE_DIR/cargo/spec" \
  -v "$CORE_PATH/cargo/script:$CODE_DIR/cargo/script" \
  -v "$CORE_PATH/go_modules/.rubocop.yml:$CODE_DIR/go_modules/.rubocop.yml" \
  -v "$CORE_PATH/go_modules/Gemfile:$CODE_DIR/go_modules/Gemfile" \
  -v "$CORE_PATH/go_modules/dependabot-go_modules.gemspec:$CODE_DIR/go_modules/dependabot-go_modules.gemspec" \
  -v "$CORE_PATH/go_modules/helpers:$CODE_DIR/go_modules/helpers" \
  -v "$CORE_PATH/go_modules/lib:$CODE_DIR/go_modules/lib" \
  -v "$CORE_PATH/go_modules/spec:$CODE_DIR/go_modules/spec" \
  -v "$CORE_PATH/go_modules/script:$CODE_DIR/go_modules/script" \
  -v "$CORE_PATH/npm_and_yarn/.rubocop.yml:$CODE_DIR/npm_and_yarn/.rubocop.yml" \
  -v "$CORE_PATH/npm_and_yarn/Gemfile:$CODE_DIR/npm_and_yarn/Gemfile" \
  -v "$CORE_PATH/npm_and_yarn/dependabot-npm_and_yarn.gemspec:$CODE_DIR/npm_and_yarn/dependabot-npm_and_yarn.gemspec" \
  -v "$CORE_PATH/npm_and_yarn/lib:$CODE_DIR/npm_and_yarn/lib" \
  -v "$CORE_PATH/npm_and_yarn/spec:$CODE_DIR/npm_and_yarn/spec" \
  -v "$CORE_PATH/npm_and_yarn/script:$CODE_DIR/npm_and_yarn/script" \
  -v "$CORE_PATH/composer/.rubocop.yml:$CODE_DIR/composer/.rubocop.yml" \
  -v "$CORE_PATH/composer/Gemfile:$CODE_DIR/composer/Gemfile" \
  -v "$CORE_PATH/composer/dependabot-composer.gemspec:$CODE_DIR/composer/dependabot-composer.gemspec" \
  -v "$CORE_PATH/composer/lib:$CODE_DIR/composer/lib" \
  -v "$CORE_PATH/composer/spec:$CODE_DIR/composer/spec" \
  -v "$CORE_PATH/composer/script:$CODE_DIR/composer/script" \
  -v "$CORE_PATH/bundler/.rubocop.yml:$CODE_DIR/bundler/.rubocop.yml" \
  -v "$CORE_PATH/bundler/Gemfile:$CODE_DIR/bundler/Gemfile" \
  -v "$CORE_PATH/bundler/dependabot-bundler.gemspec:$CODE_DIR/bundler/dependabot-bundler.gemspec" \
  -v "$CORE_PATH/bundler/lib:$CODE_DIR/bundler/lib" \
  -v "$CORE_PATH/bundler/helpers:$CODE_DIR/bundler/helpers" \
  -v "$CORE_PATH/bundler/spec:$CODE_DIR/bundler/spec" \
  -v "$CORE_PATH/bundler/helpers:/opt/bundler" \
  -v "$CORE_PATH/bundler/helpers:/opt/bundler/helpers" \
  -v "$CORE_PATH/bundler/script:$CODE_DIR/bundler/script" \
  -v "$CORE_PATH/omnibus/.rubocop.yml:$CODE_DIR/omnibus/.rubocop.yml" \
  -v "$CORE_PATH/omnibus/Gemfile:$CODE_DIR/omnibus/Gemfile" \
  -v "$CORE_PATH/omnibus/dependabot-omnibus.gemspec:$CODE_DIR/omnibus/dependabot-omnibus.gemspec" \
  -v "$CORE_PATH/omnibus/lib:$CODE_DIR/omnibus/lib" \
  -v "$CORE_PATH/omnibus/spec:$CODE_DIR/omnibus/spec" \
  -v "$CORE_PATH/omnibus/script:$CODE_DIR/omnibus/script" \
  -v "$CORE_PATH/tmp:/$CODE_DIR/tmp" \
  --name "$CONTAINER_NAME" \
  --env "LOCAL_GITHUB_ACCESS_TOKEN=$LOCAL_GITHUB_ACCESS_TOKEN" \
  "${DOCKER_OPTS[@]}" \
  --cap-add=SYS_PTRACE \
  "$IMAGE_NAME" "${CONTAINER_ARGS[@]}"
